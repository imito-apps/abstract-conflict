<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_game_rules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:padding="@dimen/game_rules_dialog_padding"
        android:scrollbars="vertical"
        android:text="@string/game_description"
        android:textColor="?colorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="?colorPrimary"
            android:gravity="center"
            android:paddingHorizontal="@dimen/game_rules_dialog_padding"
            android:text="@string/label_cards"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/dialog_separator_label_text_size"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="@dimen/game_rules_dialog_padding" />
    </LinearLayout>
</LinearLayout>
